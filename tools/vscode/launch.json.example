{
    // Copy to .vscode/launch.json and adjust paths/toolchains.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "F28335 (DSLite GDB server)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/firmware/projects/buckboost.out",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "${env:TI_C2000_GDB:-/opt/ti/gcc-c2000/bin/c2000-elf-gdb}",
            "miDebuggerServerAddress": "localhost:3333",
            "stopAtEntry": true,
            "preLaunchTask": "start-dslite-gdbserver",
            "postDebugTask": "stop-dslite-gdbserver",
            "setupCommands": [
                { "description": "Enable pretty printing", "text": "-enable-pretty-printing", "ignoreFailures": true },
                { "description": "Reset halt", "text": "monitor reset halt", "ignoreFailures": true }
            ]
        }
    ]
}
